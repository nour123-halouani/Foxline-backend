generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  password     String
  phone        String?  
  role         String
  refreshToken String?
  resetCode    String?
  resetCodeExpiry DateTime?
  otpValidated     Boolean  @default(false)
  createdAt    DateTime @default(now())
}

